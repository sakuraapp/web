{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"],
            "@common/*": ["../../common/*"],
        },
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
    },
    "exclude": ["node_modules"]
}